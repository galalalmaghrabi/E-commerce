<%- include("../parts/head.ejs") %>
    <%- include("../parts/navbar.ejs") %>
        <div class="signup wrapper" >
            <form action="/signup" method="post" class="col-sm-12 col-md-6 ">
                <div class="form-group d-flex" style="justify-content: space-between;" >
                    <input type="text" name="firstname" class="form-control input-name" placeholder="first name" required maxlength="10" minlength="3" id="firstname" >
                    <input type="text" name="lastname" class="form-control input-name" placeholder="last name" required  maxlength="10" minlength="3">
                </div>
                <div class="form-group">
                    
                    <input type="email" name="username" class="form-control" id="exampleInputEmail1"
                        aria-describedby="emailHelp" required  maxlengt="70" minlength="5" placeholder="Enter username">
                        <% let usernameError = validationResultError.find(err=> err.param === 'username') %> 
                        <% if(usernameError){ %>
                            <p class="alert alert-danger">
                                <%= usernameError.msg  %> 
                            </p>
                            <% } %>  
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="exampleInputPassword1" name="password" placeholder="Enter password" required minlength="5" maxlength="16">
                    <% let passwordError = validationResultError.find(err=> err.param === 'password') %> 
                    <% if(passwordError){ %>
                        <p class="alert alert-danger">
                            <%= passwordError.msg  %> 
                        </p>
                        <% } %> 
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="exampleInputPassword1" name="confirmpassword" placeholder="confirm password" required minlength="5" maxlength="16">
                    <% let confirmpasswordError = validationResultError.find(err=> err.param === 'confirmpassword') %> 
                    <% if(confirmpasswordError){ %>
                        <p class="alert alert-danger">
                            <%= confirmpasswordError.msg  %> 
                        </p>
                        <% } %> 
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        <%- include("../parts/footer.ejs") %>