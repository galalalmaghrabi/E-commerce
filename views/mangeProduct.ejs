<%- include('parts/head')  %>
<%- include('parts/navbar')  %>
    <div class="container d-flex col-12" style="flex-direction: column;align-items: center;height: 100vh;padding-top: 50px;box-sizing: border-box;">
        <% if(items.length === 0){ %>
            <p class="alert alert-danger">there is no Orders</p>
        <% }else{ %>
            <table class="table table-dark">
                <thead class="col-12">
                  <tr class="col-sm-11" style="box-sizing: border-box;">
                    <th scope="col">Phone</th>
                    <th scope="col">Address</th>
                    <th scope="col">Product Name</th>
                    <th scope="col">Qut</th>
                    <th scope="col">status</th>
                    <th scope="col" ><button class="" style="color: white;cursor: auto; background-color: black;padding: 2px 10px;">Edit</button></th>
                    <th scope="col"><button class="" style="color: white;cursor: auto;background-color: black;padding: 2px 10px;">Save</button></th>
                  </tr>
                </thead>
                <tbody class="col-12">
                  <% for( let item of items){ %> 
                    <form  class="col-sm-11" style="box-sizing: border-box;">
                        <tr class="col-sm-11" style="box-sizing: border-box;" >
                            <th scope="row"><%= item.phone  %> </th>
                            <td><%= item.address  %> </td>
                            <td><%= item.name  %></td>
                            <td><%= item.amount  %></td>
                            <td> <select name="status" id="">
                                <option value="<%= item.status  %>" selected><%= item.status  %></option>
                                <option value="pendding">pendding</option>
                                <option value="sent">sent</option>
                                <option value="complete">complete</option>
                            </select> </td>
                            <td><button class="" style="color: white;background-color: black;padding: 2px 10px;" formaction="/order/Save"  formmethod="post">Save</button></td>
                            <td><button class="" style="color: white;background-color: black;padding: 2px 10px;" formaction="/order/delete" formmethod="post">Delete</button></td>
                            <input type="hidden" name="_id" value="<%= item._id%>">
                            <input type="hidden" name="userId" value="<%= item.userId%>">
                          </tr>
                    </form>
                    <% } %> 
                </tbody>
              </table>
        <% } %> 
    </div>
<%- include('parts/footer')  %> 